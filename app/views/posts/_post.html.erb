<h1><%= post.id %>: <%= post.title %></h2>

<!-- truncate helper - show a portion description string -->
<div id="body-<%= post.id %>"><%= truncate post.description %></div>

<!-- tie the button to a post,
using a data-* attribute of data-id to hold the post.id for us. -->
<button class="js-more" data-id="<%= post.id %>">More...</button>
